		<div class="form-register">
			<h3>FORMULARIO DE CREACIÓN DE PRODUCTOS</h3>
			<form action="/productos/crear" method="post" enctype="multipart/form-data">
				<div class="row product-detail">
					<div class="col-12 col-md-6">
						<label for="name" class="form-label">Nombre del producto:</label>
						<input type="text" id="name" name="name" placeholder="Ej: Zapatillas Reebok" class="controls">
					</div>
					<div class="col-12 col-md-6">
						<label for="price" class="form-label">Precio del producto:</label>
						<input type="text" id="price" name="price" placeholder="Ej: 5678" class="controls">
					</div>
					<div class="col-12 col-md-6">
						<label for="discount" class="form-label">Descuento:</label>
						<input type="text" id="discount" name="discount" placeholder="Ej: 15" class="controls">
					</div>
					<div class="col-12 col-md-6">
						<label for="category" class="form-label">Categoría:</label>
						<select name="category" id="category" class="controls">
							<option value="">Elegí</option>
							<option value="in-sale">En oferta</option>
							<option value="visited">Últimos agregados</option>
						</select>
					</div>
					<div class="col-12">
						<label for="description" class="form-label">Descipción:</label>
						<textarea name="description" id="description" class="controls"></textarea>
					</div>
					<div class="col-12 col-md-6">
						<label for="productImage" class="form-label">Imagen de producto: </label>
						<input type="file" id="productImage" name="productImage" class="controls">
					</div>
					<div class="col-12">
						<button type="submit" class="button">Guardar producto</button>
					</div>
				</div>
			</form>
		</div>

	<!-- </div> -->
	<!-- /todos los productos -->

	<!-- footer -->
	<%- include('../partials/footer')%>
	<!-- /footer -->
</body>	
</html>