<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head')%>

    <body>

        <%- include('./partials/header')%>


            <section class="form-register">
                <h3>LOGIN</h3>

                <form action="/usuarios/login" method="post">

                     <!-- validation para email --konrad -->
                     <% if(locals.errors && errors.email) { %>
                        <div class="text-danger">
                            <%= errors.email.msg %>
                        </div>
                        <% } %>
                    <input class="controls" type="email" name="email" placeholder="Ingrese su usuario">
    
                    <input class="controls" type="password" name="password" placeholder="Ingrese su contraseña">
    
                    <a href="/usuarios"><input class="button" type="submit" value="INGRESAR"></a>
                    
                </form>
                    <a href="/usuarios/registro"><input class="button" type="submit" value="Creá tu cuenta"></a>




            </section>

            <%- include('./partials/footer')%>


    </body>

</html>