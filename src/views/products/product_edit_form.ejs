<!DOCTYPE html>
<html lang="es">

<%- include('../partials/head')%>
<body>
	
	<%- include('../partials/header')%>
	
		<div class="form-register">
			<h3>FORMULARIO DE EDICIÓN DE PRODUCTOS</h3>
			<form action="/productos/ <%= product.id %>?_method=PUT " method="post" enctype="multipart/form-data">
				<div class="row product-detail">
					<div class="col-12 col-md-6">
						<label for="name" class="form-label">Nombre del producto:</label>
						<input type="text" id="name" name="name" value="<%=product.name%>" placeholder="Ej: Zapatillas Reebok" class="controls">
					</div>
					<div class="col-12 col-md-6">
						<label for="price" class="form-label">Precio del producto:</label>
						<input type="text" id="price" name="price" value="<%=product.price%>"placeholder="Ej: 5678" class="controls">
					</div>
					<div class="col-12 col-md-6">
						<label for="discount" class="form-label">Descuento:</label>
						<input type="text" id="discount" name="discount" value="<%=product.discount%>"placeholder="Ej: 15" class="controls">
					</div>
					<div class="col-12 col-md-6">
						<label for="category" class="form-label">Categoría:</label>
						<select name="category" id="category" class="controls">
							<option value="">Elegí</option>
							<!-- <option value="in-sale">En oferta</option>
							<option value="visited">Últimos agregados</option> -->
							<option value="in-sale" <%= product.category == "in-sale" ? "selected" : null %> >En oferta</option>
							<option value="visited" <%= product.category == "visited" ? "selected" : null %> >Últimos agregados</option>
						</select>
					</div>
					<div class="col-12">
						<label for="description" class="form-label">Descripción:</label>
						<textarea name="description" id="description" value="<%=product.description%>"class="controls"></textarea>
					</div>
					<div class="col-12 col-md-6">
						<label for="productImage" class="form-label">Imagen de producto: </label>
						<input type="file" id="productImage" name="productImage" class="controls">
					</div>
					<div class="col-12 col-md-6">
						<button type="submit" class="button">Editar producto</button>
					</div>
				</div>
			</form>
			<!-- <form action="/products/<%= product.id %>?_method=DELETE" method="POST" style="display: inline-flex">
				<div class="col-12">
				<button type="submit" class="button">ELIMINAR</button> -->
				</div>
			</form>
		</div>

	
	<%- include('../partials/footer')%>
	
</body>	
</html>